generator client {
  provider = "prisma-client-js"
  output   = "../client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model SKU {
  id                   Int      @id @default(autoincrement()) @db.Int() @map("ID")
  sku                  String   @db.VarChar(30) @map("SKU")
  description          String?  @db.VarChar(200) @map("DESCRIPTION")
  comercialDescription String?  @db.VarChar(200) @map("COMERCIAL_DESCRIPTION")
  createdAt            DateTime @default(now()) @map("CREATED_AT")
  updatedAt            DateTime @updatedAt @map("UPDATED_AT")

  @@map("SKU")
}
